/*================================================================================*/
/*		FLAT TABLES												                                          */
/*================================================================================*/
/*sCA is short for STREET CHECKS ALL where Street Checks data had inicidents where individual was NOT charged*/
CREATE TABLE sCA (
	/*sCA_id serial primary key,*/
	RIN integer,
	RT text,
	OCC_DATE text,
	OCC_TIME text,
	LOC text,
	PIN integer,
	DOB text,
	SEX char,
	REASON_CHECKED integer,
	REASON_TEXT text,
	X numeric,
	Y numeric,
	LON numeric,
	LAT numeric
);

/*gOA = general occurrences all where instances of crimes*/
CREATE TABLE gOA(
	/*gOA_id serial primary key,*/
	RIN integer,
	UCR_Group text, /*if you know UCR_Cat you know UCR_Group so make xref table*/
	UCR_Cat text,
	EXP_TRANSLATION text, 
	OCC_DATE text,
	OCC_TIME text,
	LOC text,
	TRANSLATION text,
	PIN integer,
	DOB text,
	SEX char,
	X numeric,
	Y numeric,
	LON numeric,
	LAT numeric
);

/*general occurrences with better longitude and latitude done by Ryan*/
CREATE TABLE crimeTable(
	RIN numeric,
	UCR_Group text, 
	UCR_Cat text,
	EXP_TRANSLATION text, 
	OCC_DATE text,
	OCC_TIME text,
	LOC text,
	TRANSLATION text,
	PIN numeric,
	DOB text,
	SEX char,
	X numeric,
	Y numeric,
	LON numeric,
	LAT numeric,
	Xtransformed numeric,
	Ytransformed numeric,
	Latitude numeric,
	Longitude numeric
);


